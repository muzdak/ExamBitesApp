<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exambitesbackground"
    tools:context="education.exambites.quiz">

    <TextView
        android:id="@+id/questionTxt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_statement"
        android:ems="20"
        android:gravity="center"
        android:hint="Get Ready for Quiz"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        android:textStyle="normal" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/timerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="20dp"
            android:gravity="center"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/a"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="A"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="center"
            android:background="@drawable/background_option"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="OPTION 1"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:background="#03A9F4"
            android:layout_alignBottom="@+id/a"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/a"
            android:layout_toEndOf="@+id/a"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/b"
            android:text="B"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="center"
            android:background="@drawable/background_option"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="OPTION 2"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:background="#03A9F4"
            android:layout_toRightOf="@+id/b"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/c"
            android:text="C"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="center"
            android:background="@drawable/background_option"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="OPTION 3"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:background="#03A9F4"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/c"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/d"
            android:text="D"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="center"
            android:background="@drawable/background_option"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/optionD"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="OPTION 4"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:background="#03A9F4"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/d"
            android:layout_toEndOf="@+id/d"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_next"
            android:id="@+id/QuizQuitBtn"
            android:text="Quit"
            android:textStyle="bold"
            android:textSize="13dp"
            android:onClick="QuitQuiz"
            android:layout_marginLeft="21dp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/background_next"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>

    </RelativeLayout>


</LinearLayout>
